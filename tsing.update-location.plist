<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE plist PUBLIC "-//Apple//DTD PLIST 1.0//EN" "http://www.apple.com/DTDs/PropertyList-1.0.dtd">
<plist version="1.0">
<dict>
  <key>Label</key>
  <string>tsing.update-location</string>

  <key>ProgramArguments</key>
  <array>
      <string>/Users/tsing/bin/update-location.sh</string>
  </array>

  <key>WatchPaths</key>
  <array>
    <string>/etc/resolv.conf</string>
  </array>

  <key>RunAtLoad</key>
  <true/>

  <key>StandardErrorPath</key>
  <string>/tmp/update-location.err</string>
  <key>StandardOutPath</key>
  <string>/tmp/update-location.log</string>
</dict>
</plist>
